# starting apps 
exec --no-startup-id setxkbmap fr azerty
exec_always "compton --config $HOME/.config/compton.conf -b"
exec_always --no-startup-id "killall polybar;$HOME/.config/polybar/launch.sh -r panel"
exec_always "betterlockscreen -u  Pictures/Wallpapers/darkforest.jpg"
exec_always "betterlockscreen -w"

set $mod Mod4

font pango:monospace 8
floating_modifier $mod
bindsym $mod+Return exec termite
bindsym $mod+Shift+A kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# windows position  
bindsym $mod+d split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# tiling / floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# container focus 
bindsym $mod+q focus parent
bindsym $mod+c focus child

# workspace naming 
set $ws1 "welcome"
set $ws2 "firefox"
set $ws3 "intellij"
set $ws4 "boostnote"
set $ws5 "evolution"
set $ws6 "steam"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# workspace application binding 
assign [class="Firefox Developer Edition"]firefox
assign [class="jetbrains-idea"]intellij
assign [class="Evolution"]evolution
assign [class="Boostnote"]boostnote
assign [class="Steam"]steam

# switch to workspace
bindsym $mod+ampersand workspace $ws1
bindsym $mod+eacute workspace $ws2
bindsym $mod+quotedbl workspace $ws3
bindsym $mod+apostrophe workspace $ws4
bindsym $mod+parenleft workspace $ws5
bindsym $mod+minus workspace $ws6
bindsym $mod+egrave workspace $ws7
bindsym $mod+underscore workspace $ws8
bindsym $mod+ccedilla workspace $ws9
bindsym $mod+agrave workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# custom keybinding to lockscreen
bindsym $mod+shift+x exec betterlockscreen --lock dim

focus_follows_mouse no

# fn keys 
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioRaiseVolume exec pamixer -i 5
bindsym XF86AudioMute exec pamixer -t
bindsym XF86MonBrightnessUp exec xbacklight +5
bindsym XF86MonBrightnessDown exec xbacklight -5
bindsym Scroll_Lock exec "xrandr --output HDMI1 --primary --auto --left-of eDP1 && feh --bg-scale ~/.dotfiles/lockscreens/giraud1.jpg ~/.dotfiles/lockscreens/giraud3.jpg" 

# rofi
bindsym $mod+G exec rofi -show drun 
bindsym $mod+N exec rofi  -show find -modi find:/usr/share/rofi/.config/rofi/finder.sh
bindsym $mod+W exec bash "$HOME/.config/rofi_wifi/rofi-wifi-menu.sh"

# gaps 
for_window [class="^.*"] border pixel 0

smart_gaps on
gaps inner 15
smart_borders on


# workspace 1 default layoout 
exec_always i3-msg "workspace welcome; append_layout ~/.config/i3/workspace1.json"
exec_always i3-msg 'workspace welcome; exec termite --name mainterm' 
exec_always i3-msg "workspace welcome; exec termite --name neoterm --exec 'neofetch --w3m Pictures/blacksad.jpg --loop'"
exec_always i3-msg "workspace welcome; exec termite --name musicterm --exec 'ncmpcpp -s media_library'" 

