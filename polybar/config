[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/topbar]
width = 100%
height = 27
bottom = false
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
